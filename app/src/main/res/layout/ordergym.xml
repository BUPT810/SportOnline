<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ordergym_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_toolbar"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="场馆预约"
            android:textColor="@color/text_white"
            android:textSize="@dimen/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/date_1"
            android:checked="true"
            style="@style/ordergym_date_text"
            android:text="07-21" />

        <RadioButton
            android:id="@+id/date_2"
            style="@style/ordergym_date_text"
            android:text="07-22" />

        <RadioButton
            android:id="@+id/date_3"
            style="@style/ordergym_date_text"
            android:text="07-23" />

        <RadioButton
            android:id="@+id/date_4"
            style="@style/ordergym_date_text"
            android:text="07-24" />

        <RadioButton
            android:id="@+id/date_5"
            style="@style/ordergym_date_text"
            android:text="07-25" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/number"
                style="@style/textStyle"
                android:text="场馆号"/>
            <TextView
                android:id="@+id/height"
                style="@style/textStyle"
                android:text="8:00"/>
            <TextView
                android:id="@+id/hnine"
                style="@style/textStyle"
                android:text="9:00"/>
            <TextView
                android:id="@+id/hten"
                style="@style/textStyle"
                android:text="10:00"/>
            <TextView
                android:id="@+id/heleven"
                style="@style/textStyle"
                android:text="11:00"/>
            <TextView
                android:id="@+id/htwelve"
                style="@style/textStyle"
                android:text="12:00"/>
            <TextView
                android:id="@+id/hthirteen"
                style="@style/textStyle"
                android:text="13:00"/>
            <TextView
                android:id="@+id/hfourteen"
                style="@style/textStyle"
                android:text="14:00"/>
            <TextView
                android:id="@+id/hfifteen"
                style="@style/textStyle"
                android:text="15:00"/>
            <TextView
                android:id="@+id/sixteen"
                style="@style/textStyle"
                android:text="16:00"/>
            <TextView
                android:id="@+id/hseventeen"
                style="@style/textStyle"
                android:text="17:00"/>

            <TextView
                android:id="@+id/hninteen"
                style="@style/textStyle"
                android:text="18:00"/>
            <TextView
                android:id="@+id/htwenty"
                style="@style/textStyle"
                android:text="19:00"/>
            <TextView
                android:id="@+id/htwentyone"
                style="@style/textStyle"
                android:text="20:00"/>
            <TextView
                android:id="@+id/eighteen"
                style="@style/textStyle"
                android:text="21:00"/>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="1500dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:numColumns="20">
                </GridView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>