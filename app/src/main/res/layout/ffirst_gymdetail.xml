<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toolbar = "http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/sports01"
        android:layout_height="250dp">
    </LinearLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/gymdetail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/bg_toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="场馆详情"
            android:gravity="center"
            android:layout_gravity = "center"
            android:textSize="@dimen/toolbar_title"
            android:textColor="@color/text_white"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">
        <TextView
            android:id="@+id/gymdetaile_gymName"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/toolbar_title"
            android:text="北京邮电大学体育馆"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/gymdetail_fstars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fstars"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:id="@+id/gymdetail_viewcomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="查看评价"/>
        </LinearLayout>

        <TextView
            android:id="@+id/gymdetail_gymType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健身中心"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/location"/>
            <TextView
                android:id="@+id/gymdetail_location"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:text="北京市海淀区知春路锦秋家园小区南门"/>
        </LinearLayout>
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:text="场馆设施"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/parking"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/wifi"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/market"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/equipment"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/pink"
            android:textColor="@color/text_white"
            android:text="联系商家"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/pink"
            android:text="预约"
            android:textColor="@color/text_white"/>
    </LinearLayout>
</RelativeLayout>