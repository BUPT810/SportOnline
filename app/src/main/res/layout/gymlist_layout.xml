<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/image_gym"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@mipmap/p3"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/text_gytName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_gym"
        android:layout_alignTop="@+id/image_gym"
        android:text="北京邮电大学体育馆"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/image_star"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:maxHeight="15dp"
        android:maxWidth="80dp"
        android:src="@mipmap/fstars"
        android:layout_below="@+id/text_gytName"
        android:layout_toEndOf="@+id/image_gym"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/text_gytName"
        android:layout_alignBottom="@+id/image_gym"
        android:gravity="center_vertical"
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健身中心"
        android:layout_below="@+id/image_star"
        android:layout_toEndOf="@+id/image_gym"/>
    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.5km"
        android:layout_toEndOf="@+id/text_type"
        android:layout_alignBottom="@+id/text_type"
        android:layout_alignTop="@+id/text_type"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>